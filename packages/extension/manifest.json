{
  "manifest_version": 3,
  "name": "AnchorMarks",
  "version": "0.1.0",
  "description": "Sync your bookmarks with AnchorMarks.",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "http://localhost:5173/*",
    "https://api.anchormarks.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AnchorMarks"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}